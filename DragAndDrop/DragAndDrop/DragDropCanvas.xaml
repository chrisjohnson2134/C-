<UserControl x:Class="DragAndDrop.DragDropCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DragAndDrop"
             x:Name="root"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border BorderBrush="{Binding Color,ElementName = root}" BorderThickness="3">
        <Canvas Name="canvas" AllowDrop="True" Drop="canvas_Drop" DragOver="canvas_DragOver" DragLeave="canvas_DragLeave" Background="White">
            <Rectangle x:Name="rectangle" MouseMove="Rectangle_MouseMove" IsHitTestVisible="{Binding IsChildHitTestVisible,ElementName=root}"
                        Canvas.Left="50" Canvas.Top="50" Width="50" Height="50" Fill="{Binding Color,ElementName = root}"/>
        </Canvas>
    </Border>
</UserControl>
